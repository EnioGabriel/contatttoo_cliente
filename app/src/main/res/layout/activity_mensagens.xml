<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MensagensActivity" >

    <include
        layout="@layout/toolbar_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/smartTabConsulta"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/cor_fundo"

        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="@android:color/white"
        app:stl_defaultTabTextSize="14sp"

        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="@android:color/white"
        app:stl_indicatorThickness="4dp"
        app:stl_indicatorCornerRadius="2dp"

        app:stl_indicatorWidth="auto"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="false"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_overlineColor="#4D000000"
        app:stl_overlineThickness="0dp"
        app:stl_underlineColor="#4D000000"
        app:stl_underlineThickness="1dp"
        app:stl_dividerColor="@color/cor_fundo_dark"
        app:stl_dividerThickness="1dp"
        app:stl_defaultTabTextHorizontalPadding="16dp"
        app:stl_defaultTabTextMinWidth="195dp"
        app:stl_distributeEvenly="false"
        app:stl_clickable="true"
        app:stl_titleOffset="24dp"
        app:stl_drawDecorationAfterTab="false"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerConsulta"
        android:layout_width="match_parent"
        android:background="@color/cor_fundo_dark"
        android:layout_height="match_parent"
        android:layout_below="@id/smartTabConsulta"
        />
</LinearLayout>