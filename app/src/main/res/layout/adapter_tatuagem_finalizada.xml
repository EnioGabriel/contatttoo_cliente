<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cor_fundo_dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgFotoTatuadorFinalizado"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblNomeTatuadorFinalizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="nometatuador"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgFotoTatuadorFinalizado"
        app:layout_constraintTop_toTopOf="@+id/imgFotoTatuadorFinalizado" />

    <TextView
        android:id="@+id/lblValorFinalizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor total"
        android:textColor="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="@+id/lblHoraInicioFinalizado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblNomeTatuadorFinalizado"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/lblDataFinalizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="27/12/2020"
        app:layout_constraintStart_toEndOf="@+id/imgFotoTatuadorFinalizado"
        app:layout_constraintTop_toBottomOf="@+id/lblNomeTatuadorFinalizado" />

    <TextView
        android:id="@+id/lblHoraInicioFinalizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="17:30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgFotoTatuadorFinalizado"
        app:layout_constraintTop_toBottomOf="@+id/lblDataFinalizado"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>